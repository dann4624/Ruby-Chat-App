<style>
    :root {

    }

    .button_to{
        display:inline;
    }

    #user_edit_button{
        margin-right: 0px;
    }
    
    #user_delete_button{
        margin-right: 20px;
    }
    
    .response{
        display:inline-block;
        margin-left:10px;
        margin-right:10px;
    }
</style>
<h1><%= @user.username %></h1>
<% if @user == current_user || current_user.admin %>
    <%= button_to "Edit User", edit_user_path(@user), :method => :get, :id => 'room_edit_button' %>
    <%= button_to "Delete User", @room, :method => :delete, :id => 'room_delete_button' %>
<% end %>
