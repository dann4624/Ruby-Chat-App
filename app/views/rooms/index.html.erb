<style>
.room{
    display:block;
    margin-bottom:0.5em;
}

.title{
    display:inline-block;
    margin-left:10px;
    margin-right:10px;
    min-width:150px;
}

.description{
    display:inline-block;
    margin-right:10px;
    min-width:150px;
}

.room a{
    color:blue;
}
.container{
    margin-top:10px;
}

.button_to{
    display:inline-block;
}
</style>
<div class="container">

  Hi <%= @current_user.username %>!
  <br><br>
  <%= button_to "Refresh", "", { :onclick => "history.go(0)" } %>
  <h4> Users </h4>
    <%= turbo_stream_from "users" %>
    <div id="users">
        <%= render @users %>
    </div>

  <h4> Chat Rooms </h4>    
    <% if @current_user.admin %>
        <%= button_to "Create New Chat Room", new_room_url, :method =>  :get %>
        <br><br>
    <% end %>

    <%= turbo_stream_from "rooms" %>
    <div id="rooms">
        <%= render @rooms %>
    </div>
    
    <% flash.each do |type, msg| %>
    <div>
        <%= msg %>
    </div>
    <% end %>
</div>