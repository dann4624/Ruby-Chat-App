<style>
    :root {
    --chat_width: 800px;
    --chat_height: 600px;
    --chat_padding: 1em;
    --border_width: 1px;
    --input_button_width: 5em;
    }

    #messages{
        border: var(--border_width) solid black;
        height: var(--chat_height);
        width: var(--chat_width);
        padding: var(--chat_padding);
        margin-top:1em;
        overflow:auto;
    }

    #input{
        display:block;
        margin-top:1em;
        width: calc(var(--chat_width) + (2 * var(--chat_padding)));
        height: auto;
    }

    #input input[type=text]{
        display: inline-block;
        width:calc(100% - var(--input_button_width) - 10px - (2 * var(--border_width)));
    }

    #input input[type=submit]{
        width: var(--input_button_width);
    }

    .message {
    }

    .avatar {
        padding-right:10px;
    }

    .name {
        padding-right:10px;
    }

    .timestamp {
        padding-right:10px;
    }
    .button_to{
        display:inline;
    }
    

</style>
<h1><%= @room.title %></h1>
<% if @current_user.admin %>
    <%= button_to "Edit", edit_room_path(@room), :method => :get %>
    <%= button_to "Delete", @room, :method => :delete %>
<% end %>

<div id="messages">
    <table>
        <%= render @messages %>
    </table>
</div>
<%= render partial: 'layouts/new_message_form' %>